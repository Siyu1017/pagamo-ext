{
    "manifest_version": 3,
    "name": "PaGamO Plug-in",
    "description": "一款用於提升 PaGamO 使用體驗的外掛程式，它可以幫助你提高答題效率，並提供自定義客戶端功能",
    "version": "2.4.0",
    "icons": {
        "16": "./logo/logo-16.png",
        "32": "./logo/logo-32.png",
        "192": "./logo/logo-192.png",
        "512": "./logo/logo-512.png"
    },
    "action": {
        "default_icon": {
            "16": "./logo/logo-16.png",
            "32": "./logo/logo-32.png",
            "192": "./logo/logo-192.png",
            "512": "./logo/logo-512.png"
        }
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; script-src-elem 'self'",
        "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'unsafe-inline' 'unsafe-eval'; child-src 'self'; script-src-elem 'self' blob:"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "*/*"
            ],
            "matches": [
                "*://*/*"
            ]
        }
    ],
    "content_scripts": [
        {
            "run_at": "document_end",
            "js": [
                "./scripts/viewer.js",
                "./scripts/network.js",
                "./scripts/notify.js",
                "./scripts/setting.js",
                "./scripts/main.js"
            ],
            "css": [
                "./styles/viewer.css",
                "./styles/network.css",
                "./styles/notify.css",
                "./styles/setting.css",
                "./styles/pagamo.css"
            ],
            "matches": [
                "*://*.pagamo.org/*"
            ],
            "world": "MAIN"
        }
    ]
}